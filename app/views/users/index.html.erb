<main>
<h1 align="center"> Los voluntarios del centro</h1>
<div align="center">
<%= @users.each do |user| %>
    <ul class ="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article - title"><%= link_to user.username, user_path(user) %></li>
                <li><small>
                    <%= pluralize(user.societies.count, "sociedades") if user.societies %>
                </small></li>
                <li><small>
                    <%= pluralize(user.clients.count, "clientes") if user.clients %>
                </small></li>
                <li><small>
                    <%= pluralize(user.courses.count, "cursos") if user.courses %>
                </small></li>
                 <li><small>
                    <%= pluralize(user.categories.count, "categorias") if user.categories %>
                </small></li>
                 <% if logged_in? and current_user.admin? %>
                <%= link_to "Eliminar usuario", user_path(user), method: :delete, 
                    data: { confirm: "Estas seguro de que quieres eliminar el usuario" } %>
                
                <% end %>
            </div>
        </div>
    </ul>
<% end %>
</div>
</main>